<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainerConfirmActivity">

    <View
        android:id="@+id/view"
        android:layout_width="447dp"
        android:layout_height="285dp"
        android:layout_marginTop="492dp"
        android:alpha="0.25"
        android:background="@color/colorPrimaryDark"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="@+id/trainerImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmTitle"
        android:layout_width="229dp"
        android:layout_height="38dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="44dp"
        android:text="Confirm Booking"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmWith"
        android:layout_width="350dp"
        android:layout_height="191dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="140dp"
        android:text="Confirm Booking text"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="369dp"
        android:layout_height="96dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="328dp"
        android:text="* You can always edit/cancel and view your appointments later in the booking page"
        android:textAlignment="center"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/trainerConfirmButton"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:layout_marginStart="264dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Confirm"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/trainerPageBackButton"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>